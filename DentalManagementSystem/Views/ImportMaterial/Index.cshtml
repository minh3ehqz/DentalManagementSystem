            @using (Html.BeginForm("Delete", "ImportMaterial", FormMethod.Post, new { id = "ListForm" }))
            {
                <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_table_imports">
                    <!--begin::Table head-->
                    <thead>
                        <!--begin::Table row-->
                        <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
                            <th class="w-10px pe-2 sorting_disabled" rowspan="1" colspan="1" aria-label=" " style="width: 29.8906px;">
                                <div class="form-check form-check-sm form-check-custom form-check-solid me-3">
                                    <input class="form-check-input" type="checkbox" data-kt-check="true" data-kt-check-target="#kt_table_imports .form-check-input" value="1">
                                </div>
                            </th>
                            <th class="min-w-125px">STT</th>
                            <th class="min-w-125px">Mã vật tư</th>
                            <th class="min-w-125px">Tên</th>
                            <th class="min-w-125px">Ngày nhập</th>
                            <th class="min-w-125px">Số lượng</th>
                            <th class="min-w-125px">Đơn giá</th>
                        </tr>
                        <!--end::Table row-->
                    </thead>
                    <!--end::Table head-->
                    <!--begin::Table body (nội dung dữ liệu)-->

                    <tbody class="text-gray-600 fw-semibold">
                    @{
                        int index = 1 + (int)ViewData["stt"] * 10;
                    }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="form-check form-check-sm form-check-custom form-check-solid">
                                        <input class="form-check-input" name="selectedValues" type="checkbox" value="@item.Id" />
                                    </div>
                                </td>
                                <td>
                                    <p>@index</p>
                                    @{
                                        index++;
                                    }
                                </td>
                                <td>@item.MaterialId</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id">@item.SupplyName</a>
                                </td>
                                <td>
                                    @item.Date.Day/@item.Date.Month/@item.Date.Year @item.Date.Hour:@item.Date.Minute:@item.Date.Second
                                </td>
                                <td>
                                    @item.Amount
                                </td>
                                <td>
                                    @item.TotalPrice
                                </td>
                                <td>
                                    <form asp-action="Delete" id="importDelete">
                                        <input hidden value="@item.Id" name="id"> 
                                        <button type="submit" class="btn btn-outline-danger" form="importDelete">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"></path>
                                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"></path>
                                            </svg>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>

                    <!--end::Table body-->
                </table>
            }
        <div class="row">
            <div class="col-sm-12 col-md-5 d-flex align-items-center justify-content-center justify-content-md-start"></div>
            <div class="col-sm-12 col-md-7 d-flex align-items-center justify-content-center justify-content-md-end">
                <div class="dataTables_paginate paging_simple_numbers" id="kt_table_users_paginate">
                    <ul class="pagination">
                        @for (var i = 1; i <= (int)ViewBag.TotalPages; i++)
                        {
                            @if (i == (int)ViewBag.Page)
                            {
                                <li class="paginate_button page-item">
                                    <form asp-action="Index">
