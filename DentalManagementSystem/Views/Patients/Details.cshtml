        <div style="display:flex;">
            <dl class="row">
                <dt class="col-sm-2">
                    Họ và tên
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    Ngày tháng năm sinh 
                </dt>
                <dd class="col-sm-10">
                    @Model.Birthday.Day/@Model.Birthday.Month/@Model.Birthday.Year
                </dd>
                <dt class="col-sm-2">
                    Giới tính
                </dt>
                <dd class="col-sm-10">
                    @if (@Model.Gender)
                    {
                        <p>nam</p>
                    }
                    else
                    {
                        <p>nữ</p>
                    }
                </dd>
                <dt class="col-sm-2">
                    Địa chỉ
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Phone)
                </dt>
                <dd class="col-sm-10">
                    Số điện thoại
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-4">
                    Tiền sử cơ thể
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.BodyPrehistory)
                </dd>
                <dt class="col-sm-4">
                    Tiển sử nha khoa
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.TeethPrehistory)
                </dd>
