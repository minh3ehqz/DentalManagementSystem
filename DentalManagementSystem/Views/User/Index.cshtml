            @using (Html.BeginForm("Delete", "User", FormMethod.Post, new { id = "delete" }))
            {
                <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_table_users">
                    <!--begin::Table head-->
                    <thead>
                        <!--begin::Table row-->
                        <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
                            <th class="w-10px pe-2 sorting_disabled" rowspan="1" colspan="1" aria-label=" " style="width: 29.8906px;">
                                <div class="form-check form-check-sm form-check-custom form-check-solid me-3">
                                    <input class="form-check-input" type="checkbox" data-kt-check="true" data-kt-check-target="#kt_table_users .form-check-input" value="1">
                                </div>
                            </th>
                            <th class="min-w-125px">STT</th>
                            <th class="min-w-125px">Tên đăng nhập</th>
                            <th class="min-w-125px">Họa và tên</th>
                            <th class="min-w-125px">Sinh nhật</th>
                            <th class="min-w-125px">Chức vụ</th>
                            <th class="min-w-125px">Email</th>
                            <th class="min-w-125px">Số điện thoại</th>
                            <th class="min-w-125px">Lương </th>
                        </tr>
                        <!--end::Table row-->
                    </thead>
                    <!--end::Table head-->
                    <!--begin::Table body (nội dung dữ liệu)-->

                    <tbody class="text-gray-600 fw-semibold">

                        @{
                            int index = 1 + (int)ViewData["stt"] * 10;
                        }
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    <div class="form-check form-check-sm form-check-custom form-check-solid">
                                        <input class="form-check-input" name="selectedValues" type="checkbox" value="@item.Id" />
                                    </div>
                                </td>
                                <td>@index</td>
                                @{
                                    index++;
                                }
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id">@item.Username</a>
                                </td>
                                <td>
                                    @item.FullName
                                </td>
                                <td>
                                    @item.Birthday.Day/@item.Birthday.Month/@item.Birthday.Year
                                </td>
                                <td>
                                    @item.Role.Name
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @item.Phone
                                </td>
                                <td>
                                    @item.Salary
                                </td>
                            </tr>
                        }
                    </tbody>

                    <!--end::Table body-->
                </table>
            }
            <div class="row">
                <div class="col-sm-12 col-md-5 d-flex align-items-center justify-content-center justify-content-md-start"></div>
                <div class="col-sm-12 col-md-7 d-flex align-items-center justify-content-center justify-content-md-end">
                    <div class="dataTables_paginate paging_simple_numbers" id="kt_table_users_paginate">
                        <ul class="pagination">
                            @for (var i = 1; i <= (int)ViewBag.TotalPages; i++)
                            {
                                @if (i == (int)ViewBag.Page)
                                {
                                    <li class="paginate_button page-item">
                                        <form asp-action="Index">
                                            <input name="page" type="submit" value="@i" aria-controls="kt_table_users" data-dt-idx="1" tabindex="0" class="page-link" style="background-color:mediumpurple;color:white">
                                            <input hidden value="@ViewBag.Search" name="search">
                                        </form>
                                    </li>
                                }
                                else
                                {
                                    <li class="paginate_button page-item">
                                        <form asp-action="Index">
                                            <input name="page" type="submit" value="@i" aria-controls="kt_table_users" data-dt-idx="1" tabindex="0" class="page-link">
                                            <input hidden value="@ViewBag.Search" name="search">
                                        </form>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>


            <!--end::Table-->
        </div>
