						</svg>
					</span>
					<!--end::Svg Icon-->
					<form asp-action="Index" id="search">
						<input type="text" name="textSearch" data-kt-user-table-filter="search" class="form-control form-control-solid w-250px ps-14" placeholder="Tìm vật tư" value="@ViewData["searchContent"]">
